<?xml version="1.0"?>
<!DOCTYPE suppressions PUBLIC
        "-//Puppy Crawl//DTD Suppressions 1.2//EN"
        "http://checkstyle.sourceforge.net/dtds/suppressions_1_2.dtd">
<suppressions>
    <suppress checks="MissingJavadocMethod"/>
    <suppress checks="MissingJavadocType"/>
    <suppress checks="AbbreviationAsWordInName"/>
    <suppress checks="SummaryJavadoc"/>
    <suppress checks="AvoidStarImport"/>
    <suppress checks="MemberName"/>
    <suppress checks="NonEmptyAtclauseDescription"/>
    <suppress checks="EmptyCatchBlock"/>

    <!-- suppress checks for tests -->
    <suppress checks="VariableDeclarationUsageDistance" files="[\\/]src[\\/]*[\\/]test[\\/]"/>
</suppressions>
